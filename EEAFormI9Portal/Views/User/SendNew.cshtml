</script>


<div class="container-fluid">
    <h2>Send New</h2>
    <div class="row-fluid">
        <div class="col-md-6 col-md-offset-2">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title"> Add recepients to send</h3>
                </div>
                <div class="panel-body">
                    <form>
                        <div class="form-group">
                            <label>Name</label>
                            <input type="text" id="name" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label>Email</label>
                            <input type="text" id="email" class="form-control" />
                        </div>
                        <div class="form-group">
                            <input type="button" id="btnsubmit" value="Send" class="btn btn-info" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $('#btnsubmit').click(function () {
        var email = {
            "email": $('#email').val()
        };
        
        $.post({
            url: '/User/SendEmail',
            data: email,
            dataType: "json",
            success: function () {
                alert('Mail sent')
            }
        });
    });
</script>